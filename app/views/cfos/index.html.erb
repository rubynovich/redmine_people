<div id="content">
	<h2>Список ЦФО</h2>

	<table class="list plugins">
		<tr class="odd">
			<th><%= t(:label_cfo) %></th>
			<th></th>
			<th></th>
		</tr>

	<% @cfos.each do |cfo| %>
		<tr class="even">
			<td><%= cfo.cfo %></td>
			<td><%= link_to 'Обновить', edit_cfo_path(cfo) %></td>
			<td><%= link_to 'Удалить', cfo, method: :delete, data: { confirm: 'Точно удалить ЦФО?' } %></td>
		</tr>
	<% end %>
	</table>

	<br />

	<%= link_to 'Добавить ЦФО', new_cfo_path %>
</div>