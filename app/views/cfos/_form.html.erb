<%= form_for(@cfo) do |f| %>
  <% if @cfo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cfo.errors.count, "error") %> препядствуют сохранению этого ЦФО:</h2>

      <ul>
      <% @cfo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:label_cfo) %><br />
    <%= f.text_area :cfo, :rows => 1 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<br />
